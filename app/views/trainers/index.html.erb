<h1>Trainers#index</h1>
<p>Find me in app/views/trainers/index.html.erb</p>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/414029/pexels-photo-414029.jpeg?cs=srgb&dl=adult-athlete-body-414029.jpg&fm=jpg');">
  <div class="banner-content">
    <h1>Find your trainer</h1>
    <p>Become a healthier and a stronger person</p>
  </div>
</div>
<div class="container">
  <div class="row">
   <% @trainers.each do|trainer|  %>
   <div class="col-xs-12 col-sm-4">
    <div class="card" style="background-image: url('https://source.unsplash.com/collection/930859')">
      <h2><%= link_to trainer.user.first_name, trainer_path(trainer) %></h2>
    </div>
  </div>
   <% end %>
  </div>
</div>
